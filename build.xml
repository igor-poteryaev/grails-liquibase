            <!--<fileset dir="${src.dir}/java-test"-->
                     <!--includes="**/*.properties, **/*.xml, **/*.txt, **/*.config, **/*.tld, **/*.xsd,**/*.sql,**/*.css"/>-->
        <!--</copy>-->
    </target>

